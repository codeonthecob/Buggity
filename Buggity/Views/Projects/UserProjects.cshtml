@model IEnumerable<Buggity.Models.CodeFirst.Project>
@{
    ViewBag.Title = "UserProjects";
}

<h2>Project Manager's Projects</h2>


<div class="table-responsive">
    <table id="myTable" class="table table-striped table-hover" style="border: 2px solid lightgray; font-size: 12px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.First().Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Priority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Owner)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
                @*@<th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>*@

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    @*<td>
                              @Html.DisplayFor(modelItem => item.UserId)
                        </td>*@



                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
