@model List<SelectListItem>

@{
    ViewBag.Title = "Assign a user to project";
}

<h2>Edit</h2>

@using (Html.BeginForm("AddUserToProject","Projects",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Project</h4>
        @Html.Hidden("projectId",ViewData["projectId"].ToString())
        <hr />
        <div class="form-group">
            
            <div class="col-md-10">
                @Html.DropDownList("AvailableUserId", Model, "Available users:",
               new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


